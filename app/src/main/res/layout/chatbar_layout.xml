<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageButton
        android:id="@+id/chat_activity_back"
        android:layout_width="53dp"
        android:layout_height="66dp"
        android:layout_marginStart="-111dp"
        android:layout_toEndOf="@+id/chat_activity_profile_pic"
        android:background="@android:color/transparent"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/ic_arrow_back_whhte24dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_activity_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"

        android:layout_marginTop="0dp"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:src="@drawable/default_profile_pic" />

    <TextView
        android:textColor="#fef6e7"
        android:id="@+id/chat_activity_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="127dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="12dp"
        android:text="@string/Username"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:textColor="#fef6e7"
        android:id="@+id/chat_activity_profile_lastseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_activity_profile_pic"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginBottom="2dp"
        android:text="Last Seen" />
</RelativeLayout>
